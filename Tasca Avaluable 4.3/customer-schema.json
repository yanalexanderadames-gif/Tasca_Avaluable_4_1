{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Customers",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "customer": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "cust_id": { "type": "integer" },
          "fed_id": { "type": "string" },
          "type": { "type": "string", "enum": ["individual", "business"] },
          "address": { "type": "string" },
          "city": { "type": "string" },
          "postal_code": { "type": "string" },
          "state": { "type": "string", "enum": ["MA","NH","RI","VE","CN","NY"] },

          "first_name_ind": { "type": "string" },
          "last_name_ind": { "type": "string" },
          "birth_date": { "type": "string", "format": "date" },

          "name": { "type": "string" },
          "state_id": { "type": "string" },
          "incorp_date": { "type": "string", "format": "date" },
          "officer": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "properties": {
                "officer_id": { "type": "integer" },
                "first_name_off": { "type": "string" },
                "last_name_off": { "type": "string" },
                "start_date": { "type": "string", "format": "date" },
                "end_date": { "type": "string", "format": "date" },
                "title": { "type": "string", "enum": ["President","CEO"] }
              },
              "required": ["officer_id","first_name_off","last_name_off"],
              "additionalProperties": false
            }
          }

        },
        "required": ["cust_id","fed_id","type"],
        "allOf": [
          {
            "if": { "properties": { "type": { "const": "individual" } } },
            "then": {
              "required": ["first_name_ind","last_name_ind"],
              "not": { "required": ["name","state_id","officer"] }
            }
          },
          {
            "if": { "properties": { "type": { "const": "business" } } },
            "then": {
              "required": ["name","state_id","officer"],
              "not": { "required": ["first_name_ind","last_name_ind"] }
            }
          }
        ],
        "additionalProperties": false
      }
    }
  },
  "required": ["customer"],
  "additionalProperties": false
}
